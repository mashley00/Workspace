import java.text.NumberFormat;
import java.time.Month;
import java.util.Scanner;

public class RoomDimensions {

	public static void main(String[] args) {

		String choice = "y";
		while (choice.equalsIgnoreCase("y"))

		{

			System.out.println("Enter lenght of Wall 1(length): ");
			Scanner scan = new Scanner(System.in);
			double wall1 = scan.nextDouble();
			//scan1.nextLine();
			System.out.println("Enter lenght of Wall 2(width): ");
			Scanner scan1 = new Scanner(System.in);
			double wall2 = scan1.nextDouble();
			//scan2.nextLine();
			System.out.println("Enter the height of the room in meters: ");

			Scanner height = new Scanner(System.in);
			double areaOfRoom =0;
			double height1 = height.nextDouble();
			System.out.println("The volume of the room is: " + (areaOfRoom * height1)+ "meters.");

			double perimeter;
			perimeter = (2 * (wall1 + wall2));

			System.out.println("The perimeter of the room is in meters is: " + perimeter);

			
			areaOfRoom = (wall1 * wall2);

			System.out.println("The area of the room in meters is: " + areaOfRoom);

			System.out.println("Would you like to continue? Type Y or N: ");

			// scan1.nextLine();

			// choice = scan1.nextLine();while (choice = y) {

		}
	}
}
